  },
  "peerDependencies": {
    "format-message": "^6.2.3",
    "office-ui-fabric-react": "^7.88.1",
    "react": "16.13.1"
  },
  "devDependencies": {
    "@botframework-composer/test-utils": "*",
    "@types/lodash": "^4.14.146",
