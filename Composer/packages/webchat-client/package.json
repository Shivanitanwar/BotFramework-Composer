{
  "name": "@bfc/webchat-client",
  "version": "0.0.0",
  "private": true,
  "description": "Botframework Webchat Client in Composer",
  "main": "lib/index.js",
  "engines": {
    "node": ">=12"
  },
  "files": [
    "css",
